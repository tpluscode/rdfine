{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2019",
    "declaration": true,
    "lib": [
      "es6",
      "esnext",
      "WebWorker"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "**/*.d.ts",
    "node_modules"
  ]
}
