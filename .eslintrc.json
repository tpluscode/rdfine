{
  "root": true,
  "extends": [ "@tpluscode" ],
  "env": {
    "jest/globals": true
  },
  "plugins": [
    "jest"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "symbol-description": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/__tests__/**"]}]
  }
}
